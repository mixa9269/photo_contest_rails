<!DOCTYPE html>
<html>
  <head>
    <title>PhotoContestRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <footer class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-dark border-bottom box-shadow">
      <a href="/" class="mr-md-auto">
        <%= image_tag("logo.png", :alt => "logo", :class => "logo") %>
      </a>
      <nav class="my-2 my-md-0 mr-md-3">
        <!-- <a class="p-2 text-dark" href="#"></a> -->
      </nav>
      <a class="btn btn-dark" href="#">Sign in</a>
    </footer>
    <%= yield %>
  </body>
</html>